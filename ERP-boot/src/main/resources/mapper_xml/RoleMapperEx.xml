<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ywy.erp.mappers.RoleMapperEx">
    <select id="selectByConditionRole" resultMap="com.ywy.erp.mappers.RoleMapper.BaseResultMap">
        SELECT *
        FROM role
        WHERE 1=1
        and ifnull(delete_flag,'0') !='1'
        <if test="name != null">
            <bind name="bindName" value="'%'+name+'%'"/>
            and name like #{bindName}
        </if>
        <if test="offset != null and rows != null">
            limit #{offset},#{rows}
        </if>;
    </select>
    <select id="countsByRole" resultType="java.lang.Long">
        SELECT
        COUNT(id)
        FROM role
        WHERE 1=1
        and ifnull(delete_flag,'0') !='1'
        <if test="name != null">
            <bind name="bindName" value="'%'+name+'%'"/>
            and name like #{bindName}
        </if>
    </select>
    <update id="batchDeleteRoleByIds">
        update role
        set delete_flag='1'
        where 1=1
        and id in (
        <foreach collection="ids" item="id" separator=",">
            #{id}
        </foreach>
        )
    </update>
</mapper>